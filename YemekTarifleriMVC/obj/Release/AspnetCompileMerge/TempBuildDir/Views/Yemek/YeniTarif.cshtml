@model YemekTarifleriMVC.Models.Tarifler
@{
    ViewBag.Title = "yenitarif";
}

@using (Html.BeginForm())
{
    @Html.AntiForgeryToken()
    <h4>Kategori Ekle</h4>
    @Html.ValidationSummary(true, "", new { @class = "text-danger" })
    <div>
        <label style="font-size:20px;">Başlık</label>

        @Html.TextBoxFor(model => model.Baslik, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Baslik, "", new { @style = "color:blue" })
    </div>
    <div>
        <label style="font-size:20px;">Resim linki</label>

        @Html.TextBoxFor(model => model.Gorsel, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Gorsel, "", new { @style = "color:blue" })
    </div>
    <div>
        <label style="font-size:20px;">Malzemeler</label>

        @Html.TextBoxFor(model => model.Malzemeler, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Malzemeler, "", new { @style = "color:blue" })
    </div>
    <div>
        <label style="font-size:20px;">Pişirme süresi</label>

        @Html.TextBoxFor(model => model.Sure, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.Sure, "", new { @style = "color:blue" })
    </div>
    <div>
        <label style="font-size:20px;">Kategori Adı</label>

        @Html.DropDownListFor(model => model.Kategoriler.Id,(List<SelectListItem>)ViewBag.DGR, new { @class = "form-control" })
        @Html.ValidationMessageFor(model => model.KategoriId, "", new { @style = "color:blue" })
    </div>
    <div>
        <button type="submit" style="margin-top:20px;" class="btn btn-success">Tarif Ekle</button>
    </div>
}