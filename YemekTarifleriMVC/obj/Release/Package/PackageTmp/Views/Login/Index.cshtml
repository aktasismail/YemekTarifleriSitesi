@{
    ViewBag.Title = "Giriş Yap";
}
<div class="container justify-content-center d-flex" style="margin-top:150px">

    @using (Html.BeginForm("Index", "Login", FormMethod.Post))
    {
        <h2>Giriş Yap</h2>
        <div class="form-group mt-4" style="width:250px;">
            <label for="exampleInputEmail1">E Posta</label>
            <input class="form-control my-2" name="KullaniciAdi" placeholder="E posta adresiniz">
        </div>
        <div class="form-group" style="width:250px;">
            <label for="exampleInputPassword1">Şifre</label>
            <input type="password" name="Sifre" class="form-control my-2" placeholder="...">
        </div>
        <button type="submit" class="btn btn-primary">Giriş Yap</button>
    }

</div>