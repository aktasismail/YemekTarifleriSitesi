@model ismailaktas.Models.entity.Tbl_kategoriler
@{
    ViewBag.Title = "yenikategori";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}

<form class="form-group" method="post">
    <div>
       <label style="font-size:20px;">Kategori Adı</label>

        @Html.TextBoxFor(m =>m.kategoriad, new { @class="form-control"})
        @Html.ValidationMessageFor( m=> m.kategoriad,"",new { @style="color:blue"})
    </div>
    <div>
        <button style="margin-top:20px;" class="btn btn-success" >Kategori Ekle</button>
    </div>
</form>

