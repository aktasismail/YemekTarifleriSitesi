@using ismailaktas.Models.entity
@model List<Tablo_Yemek>
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_MainLayout.cshtml";
}



<div style="color:aliceblue; padding:10px; height:50px; text-align:center; background-color: #99CED3"><h3>Yemek Çeşitlerine Göz Atın</h3></div>
<div style="height:30px;  background-color:#EDB5BF"></div>
<div class="row">
    @foreach (var ymklr in Model)
    {

        <div class="col-sm-4" style="text-align:center;">
            <img src="@ymklr.yemekresim" class="w-75 p-3" alt="Responsive image" />
            <h3> @ymklr.yemekad</h3>
            <h6>Süre: @ymklr.yemeksure</h6>
            <a href="/yemek/Oku/@ymklr.yemekid" style="background-color:#0066cc !important;" class="btn btn-success">Oku</a>
        </div>
    }
</div>



